//Problem Statement:
//
//Write a program that draws the following figures one above the other.
//
// 
//
//* * * * *             * 
//
//* * * * *            * * 
//
//* * * * *           * * *
//
//* * * * *         * * * * *
//
// 
//
//Now modify it to draw them next to each other like earlier.

package com.handon2;

public class Problem6 {

	public static void main(String[] args) {
		int R=4;
		int C=5;
		for(int i=0; i<R; ++i)
	    {
	        /* Iterate over columns */
	        for(int j=0; j<C; ++j)
	        {
	            /* Print star for each column */
	            System.out.print("*");
	        }
	        
	        /* Move to the next line/row */
	        System.out.println();
	    }
		
		System.out.println();
		
		
		for(int i=1;i<=R;i++)    
		{    
			for(int j=1;j<=C-i;j++)    
			{    
				System.out.print(" ");
			}    
			for(int k=1;k<=i;k++)    
			{    
				System.out.print("* ");   
			}    
			for(int l=i-1;l>=1;l--)    
			{    
				System.out.print("* "); 
			}    
		System.out.println();
	}
	}
}
